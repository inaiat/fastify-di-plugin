{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
